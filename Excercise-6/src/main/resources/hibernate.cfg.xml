<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect
        </property>
        <property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name = "hibernate.connection.url">
            jdbc:postgresql://localhost:5432/BidSystem
           
        </property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <property name = "hibernate.connection.username">postgres</property>
        <property name = "hibernate.connection.password">argusadmin</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.mycompany.excercise.model.Address" />
        <mapping class="com.mycompany.excercise.model.BankAccount" />
        <mapping class="com.mycompany.excercise.model.Bid" />
        <mapping class="com.mycompany.excercise.model.BillingDetails" />
        <mapping class="com.mycompany.excercise.model.Category" />
        <mapping class="com.mycompany.excercise.model.Comment" />
        <mapping class="com.mycompany.excercise.model.CreditCard" />
        <mapping class="com.mycompany.excercise.model.Item" />
        <mapping class="com.mycompany.excercise.model.Shipment" />
        <mapping class="com.mycompany.excercise.model.User" />
    </session-factory>
</hibernate-configuration>